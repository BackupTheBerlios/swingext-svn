<?xml version="1.0" encoding="UTF-8"?>
<ivyconf>
    <property name='ivy.checksums' value=''/>
    <property name='teamcity.server.url' value='http://bender.fit.fraunhofer.de:8111'/>

    <!--<conf defaultCache="${user.homeagent.work.dir}/.ivy/cache"/>-->
    <conf defaultCache="${user.home}/.ivy/cache"/>
    <conf defaultResolver="resolver-chain"/>

    <statuses>
        <status name='lastPinned' integration='false'/>
        <status name='lastSuccessful' integration='false'/>
        <status name='lastFinished' integration='false'/>
        <status name='integration' integration='true'/>
    </statuses>

    <resolvers>
        <chain name="resolver-chain">
            <filesystem name="ivy-local">
                <!-- creates a local repository -->
                <artifact pattern="${user.home}/.ivy/repository/[organisation]/[module]/[artifact]-[revision].[type]"/>
            </filesystem>

            <sftp keyFile="${user.home}/.ssh/ivy_dsa" name="fit" user="ivy" host="subv-ext.fit.fraunhofer.de">
                <!--<ivy pattern="sftp://ivy@subv-ext.fit.fraunhofer.de/var/ivy/repository/[organisation]/[module]/[artifact]-[revision].[type]"/>-->
                <artifact pattern="/var/ivy/repository/[organisation]/[module]/[artifact]-[revision].[type]"/>
            </sftp>
        </chain>
    </resolvers>

</ivyconf>